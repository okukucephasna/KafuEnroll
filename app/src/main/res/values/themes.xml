<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Default App Theme using Material Components -->
    <style name="Theme.KafuEnroll" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#1B6F1B</item>
        <item name="colorPrimaryVariant">#145214</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:statusBarColor">#1B6F1B</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.KafuUniApp.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">#1B6F1B</item>
    </style>

    <style name="Theme.KafuEnroll.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


</resources>
